{
  "extends": ".",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "pretty": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "~shared": [
        "../shared/*"
      ]
    },
    "incremental": true,
    "baseUrl": ".",
    "types": ["jest", "node"],
    "typeRoots": ["./typings"],
    "module": "commonjs"
  },
  "include": [
    "typings",
    "**/*.ts",
    "**/*.tsx",
    "colors.js",
    "../shared",
    "../shared/backend"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "pages",
    "hooks",
    "components"
  ]
}
