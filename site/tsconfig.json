{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "@/*": ["*"],
      "~shared": ["../shared/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "colors.js", "../shared", "../shared/backend"],
  "exclude": ["node_modules"]
}
